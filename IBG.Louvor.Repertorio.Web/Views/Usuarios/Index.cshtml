@model IEnumerable<IBG.Louvor.Repertorio.Models.Usuario>
@{
    ViewBag.Title = "Usuários";
}

<div class="container-fluid my-5">
    <form>
        <div class="form-group">
            <div class="row mr-2">
                <div class="col-8">
                    <label for="Equipe">Equipe</label>
                    @Html.DropDownList("EquipeId", new SelectList(ViewBag.Equipes, "Id", "NomeAbreviado"), new { @class = "form-control" })
                </div>
                <div class="col-4 pt-2">
                    <button type="submit" class="btn btn-default mt-4">Escolher</button>
                </div>
            </div>
        </div>
    </form>
</div>

<div class="card bg-gradient-default shadow mx-3 mb-3">
    <div class="card-header bg-transparent border-0">
        <h3 class="text-white mb-0">Usuários</h3>
    </div>
    <div class="table-responsive">
        <table class="table align-items-center table-dark table-flush datatable">
            <thead class="thead-dark">
                <tr>
                    <th></th>
                    <th scope="col">Nome</th>
                    <th scope="col">Equipe</th>
                    <th scope="col">Login</th>
                    <th scope="col">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="bg-gradient-default">
                        <td scope="row"></td>
                        <td scope="row">@item.Nome</td>
                        <td scope="row">@item.Equipe.NomeAbreviado</td>
                        <td scope="row">@item.Login</td>
                        <td scope="row">
                            <a href="#" class="btn btn-sm btn-danger">
                                <i class="fa fa-trash" aria-hidden="true"></i>
                            </a>
                            <a href="#" class="btn btn-sm btn-warning">
                                <i class="fa fa-edit" aria-hidden="true"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section scripts {

    <script>



    </script>

}
