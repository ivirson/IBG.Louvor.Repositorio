@model IEnumerable<IBG.Louvor.Repertorio.Models.Musica>
@{
    ViewBag.Title = "Músicas";
}

<div class="card bg-gradient-default shadow mx-3 mb-3">
    <div class="card-header bg-transparent border-0">
        <h3 class="text-white mb-0">Músicas</h3>
    </div>
    <div class="table-responsive">
        <table class="table align-items-center table-dark table-flush datatable">
            <thead class="thead-dark">
                <tr>
                    <th></th>
                    <th scope="col">Música</th>
                    <th scope="col">Cantor</th>
                    <th scope="col">Adicionada em</th>
                    <th scope="col">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="bg-gradient-default">
                        <td scope="row"></td>
                        <td scope="row">@item.Nome</td>
                        <td scope="row">@item.Cantor</td>
                        <td scope="row">@item.DataInclusao.ToString("dd/MM/yyyy")</td>
                        <td scope="row">
                            <a href="#" class="btn btn-sm btn-danger">
                                <i class="fa fa-trash" aria-hidden="true"></i>
                            </a>
                            <a href="#" class="btn btn-sm btn-warning">
                                <i class="fa fa-edit" aria-hidden="true"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

